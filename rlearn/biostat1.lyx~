\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
\lang english

\begin_inset Formula $h_{1}(t)=h_{0}(t)exp(0.326555prison-0.035369dose-1.009896clinic)$
\end_inset


\end_layout

\begin_layout Standard

\family roman
\series medium
\shape up
\size normal
\emph off
\bar no
\strikeout off
\uuline off
\uwave off
\noun off
\color none
\lang english
\begin_inset Formula $h_{2}(t)=h_{0}(t)exp(1.19238prison+0.9810dose+1.1967clinic+0.4779clinic\times prison+0.9861clinic\times dose)$
\end_inset


\end_layout

